<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/backg"
        android:alpha="0.9">


    <TextView
            android:text="MARVEL QUIZ"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="45dp"
            android:gravity="center"
            android:layout_gravity="center"
            android:textColor="#045FEC"
            android:textStyle="bold"
            android:id="@+id/textView2"
            android:layout_weight="2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintVertical_bias="0.05"/>

    <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:textSize="25dp"
            android:hint="Enter Your Name Here"
            android:textColorHint="#FFFFFF"
            android:layout_gravity="center"
            android:gravity="center"
            android:textColor="#FFFFFF"
            android:id="@+id/editText"
            android:layout_marginTop="10dp"
            android:layout_weight="0"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintVertical_bias="0.15"/>

    <TextView
            android:text="This QUIZ comprises of 10 question. Each question would be having a picture of actor/actress. Based on the picture and question asked, you have to choose from the four given options and press on NEXT button to proceed. \n\nNote : INTERNET CONNECTION REQUIRED."
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#004A92"
            android:textSize="25dp"
            android:id="@+id/textView3"
            android:gravity="center"
            android:layout_gravity="center"
            android:layout_weight="3"
            android:layout_marginTop="30dp"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:padding="16dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintVertical_bias="0.5"/>

    <Button
            android:text="TAP TO START QUIZ"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="30dp"
            android:gravity="center"
            android:textColor="#FF0000"
            android:layout_gravity="center"
            android:onClick="button"
            android:background="#FFFFFF"
            android:layout_weight="0"
            android:id="@+id/button2"
            android:layout_marginTop="30dp"
            android:padding="16dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintVertical_bias="0.9"/>

    <TextView
            android:text="To All Marvel Fans By Sayantan Banerjee"
            android:layout_width="370dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="#310303"
            android:layout_weight="0"
            android:textSize="16dp"
            android:paddingBottom="6dp"
            android:layout_marginBottom="10dp"
            android:id="@+id/textView5"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintVertical_bias="1"/>


</android.support.constraint.ConstraintLayout>